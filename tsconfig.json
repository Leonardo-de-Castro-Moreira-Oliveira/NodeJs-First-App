{
  "compilerOptions": {
    "target": "ES6",                // Define a versão do JavaScript para a qual o TypeScript será compilado
    "module": "CommonJS",               // Define o tipo de módulo que será utilizado
    "moduleResolution": "Node",      // Define a resolução dos módulos do Node.js
    "lib": ["DOM", "ESNext"],         // Inclui tipos de DOM e recursos de ESNext
    "sourceMap": true,               // Gera arquivos de mapa de fonte para depuração
    "outDir": "./js",                // Define o diretório de saída dos arquivos compilados
    "rootDir": "./ts",               // Define o diretório raiz do projeto
    "strict": true,                 // Ativa todas as verificações estritas
    "esModuleInterop": true,       // Habilita a interoperabilidade com módulos CommonJS
    "skipLibCheck": true,          // Ignora a verificação de tipo dos arquivos de declaração (*.d.ts)
    "forceConsistentCasingInFileNames": true // Garante que os nomes de arquivos sejam consistentes
  },
  "include": ["ts/**/*.ts"],      // Inclui todos os arquivos .ts dentro do diretório ts
  "exclude": ["node_modules"]     // Exclui a pasta node_modules da compilação
}
